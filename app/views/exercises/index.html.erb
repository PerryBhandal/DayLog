<h1>Listing exercises</h1>

<table>
  <thead>
    <tr>
      <th>Exercised at</th>
      <th>Type</th>
      <th>Description</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.exercised_at %></td>
        <td><%= exercise.exercise_type %></td>
        <td><%= exercise.description %></td>
        <td><%= exercise.comments %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exercise', new_exercise_path %>
